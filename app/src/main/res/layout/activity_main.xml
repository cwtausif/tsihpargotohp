<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_as_bg"
    tools:context="com.glowingsoft.photographist.Activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buyerBT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg_v"
            android:onClick="onClick"
            android:text="View as a Buyer"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sellerBT"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@id/buyerBT"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg_v"
            android:onClick="onClick"
            android:text="View as a Seller"
            android:textAllCaps="false"
            android:textColor="@color/white">

        </Button>
    </LinearLayout>

</RelativeLayout>
